<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nomorsurat"
            android:text="1"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"/>
        <TextView
            android:textStyle="bold"
            android:layout_toRightOf="@+id/nomorsurat"
            android:id="@+id/Katasurat"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surat"
            android:textSize="20sp"/>
        <TextView
            android:textStyle="bold"
            android:layout_toRightOf="@+id/Katasurat"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/namaayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Surat"
            android:textSize="20sp"/>
        <TextView
            android:layout_below="@+id/Katasurat"
            android:layout_toRightOf="@+id/nomorsurat"
            android:layout_marginLeft="10dp"
            android:id="@+id/turunayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayat ke "
            android:textSize="18sp"/>
        <TextView
            android:layout_below="@+id/Katasurat"
            android:layout_toRightOf="@+id/turunayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="18sp"
            android:id="@+id/noayat"/>
        <ImageView
            android:id="@+id/deletebookmark"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_delete_black_24dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>